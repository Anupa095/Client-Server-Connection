<Window x:Class="CalculatorClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Distributed Calculator" 
        Height="800" Width="650" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Server Selection Row -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
            <TextBlock Text="Server Mode:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            
            <RadioButton x:Name="ManualModeRadio" Content="Manual Select" GroupName="ServerMode" IsChecked="True" Margin="0,0,10,0"/>
            <RadioButton x:Name="AutoModeRadio" Content="Auto Select" GroupName="ServerMode"/>

            <ComboBox x:Name="ServerComboBox" Width="150" Margin="20,0,0,0" SelectedIndex="0">
                <ComboBoxItem Content="localhost:5001"/>
                <ComboBoxItem Content="localhost:5002"/>
                <ComboBoxItem Content="localhost:5003"/>
            </ComboBox>

            <Button x:Name="ConnectButton" Content="Connect" Width="100" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Number Inputs -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <!-- Number 1 -->
            <Grid Margin="10">
                <TextBox x:Name="Number1TextBox" Width="120" Height="30"/>
                <TextBlock Text="Enter number 1"
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           x:Name="Placeholder1"/>
            </Grid>

            <!-- Number 2 -->
            <Grid Margin="10">
                <TextBox x:Name="Number2TextBox" Width="120" Height="30"/>
                <TextBlock Text="Enter number 2"
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           x:Name="Placeholder2"/>
            </Grid>
        </StackPanel>


        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="SquareButton" Content="Square" Width="100" Margin="10"/>
            <Button x:Name="CubeButton" Content="Cube" Width="100" Margin="10"/>
            <Button x:Name="MultiplyButton" Content="Multiply" Width="100" Margin="10"/>
        </StackPanel>

        
        <!-- Range input and Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Range (e.g. 1-10):" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="RangeTextBox" Width="160" Height="30" Margin="0,0,10,0"/>
            <Button x:Name="AddiyionButton" Content="Addition" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="ClearButton" Content="Clear" Width="100" Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Server Status Row -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" x:Name="ServerStatusPanel">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="8" Margin="6">
                <StackPanel Width="160">
                    <TextBlock Text="Server A (5001)" FontWeight="Bold" x:Name="Server1Name"/>
                    <TextBlock Text="Events: 0" x:Name="Server1Clock"/>
                    <TextBlock x:Name="Server1Vector" Margin="0,6,0,0" 
                              FontFamily="Consolas" FontSize="14"
                              Text="[0, 0, 0]"/>
                    <TextBlock x:Name="Server1Range" Margin="0,6,0,0"
                               FontSize="12" Foreground="Gray"
                               Text="Range: -"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="8" Margin="6">
                <StackPanel Width="160">
                    <TextBlock Text="Server B (5002)" FontWeight="Bold" x:Name="Server2Name"/>
                    <TextBlock Text="Events: 0" x:Name="Server2Clock"/>
                    <TextBlock x:Name="Server2Vector" Margin="0,6,0,0"
                              FontFamily="Consolas" FontSize="14"
                              Text="[0, 0, 0]"/>
                    <TextBlock x:Name="Server2Range" Margin="0,6,0,0"
                               FontSize="12" Foreground="Gray"
                               Text="Range: -"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="8" Margin="6">
                <StackPanel Width="160">
                    <TextBlock Text="Server C (5003)" FontWeight="Bold" x:Name="Server3Name"/>
                    <TextBlock Text="Events: 0" x:Name="Server3Clock"/>
                    <TextBlock x:Name="Server3Vector" Margin="0,6,0,0"
                              FontFamily="Consolas" FontSize="14"
                              Text="[0, 0, 0]"/>
                    <TextBlock x:Name="Server3Range" Margin="0,6,0,0"
                               FontSize="12" Foreground="Gray"
                               Text="Range: -"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Result -->
        <Border Grid.Row="5" BorderThickness="1" BorderBrush="Gray" CornerRadius="10" Padding="10" Margin="0,10,0,0">
            <TextBlock x:Name="ResultTextBlock" 
                      Text="Results will appear here" 
                      FontSize="16" FontWeight="Bold" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
