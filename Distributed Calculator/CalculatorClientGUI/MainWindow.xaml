<Window x:Class="CalculatorClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Distributed Calculator" Height="400" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Server Selection -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Select Server:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <ComboBox x:Name="ServerComboBox" Width="120" SelectedIndex="0">
                <ComboBoxItem Content="localhost:5001"/>
                <ComboBoxItem Content="localhost:5002"/>
                <ComboBoxItem Content="localhost:5003"/>
            </ComboBox>
        </StackPanel>

        <!-- Number Input -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Grid.Row="1">
            <TextBlock Text="Number 1:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBox x:Name="Number1TextBox" Width="80" Margin="0,0,20,0"/>
            <TextBlock Text="Number 2:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBox x:Name="Number2TextBox" Width="80"/>
        </StackPanel>

        <!-- Buttons and Result -->
        <StackPanel Grid.Row="2">
            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button x:Name="SquareButton" Content="Square" Width="100" Margin="5"/>
                <Button x:Name="CubeButton" Content="Cube" Width="100" Margin="5"/>
                <Button x:Name="MultiplyButton" Content="Multiply" Width="100" Margin="5"/>
            </WrapPanel>

            <TextBlock x:Name="ResultTextBlock" Text="Result will appear here" FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
